{
  "name": "jste",
  "version": "1.1.0",
  "description": "JavaScript Text Editor (JS TE) is a versatile JavaScript library for creating text editors in web applications.",
  "main": "index.js",
  "scripts": {
    "test": "npx jest",
    "dist": "npx babel src --out-dir dist --copy-files && cd dist && npx uglify-js jste.js -c -m -o jste.min.js --source-map url=jste.min.js.map && cd css && npx uglifycss jste.css > jste.min.css",
    "start": "http-server . -p 8080"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tkdesign/jste.git"
  },
  "keywords": [
    "javascript",
    "js",
    "vanilla-js",
    "text-editor",
    "html-text-editor",
    "js-text-editor",
    "editor"
  ],
  "author": "Petr Kovalenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tkdesign/jste/issues"
  },
  "homepage": "https://github.com/tkdesign/jste#readme",
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/plugin-proposal-export-default-from": "^7.27.1",
    "@babel/plugin-transform-object-assign": "^7.27.1",
    "@babel/preset-env": "^7.28.3",
    "babel-loader": "^10.0.0",
    "core-js": "^3.45.1",
    "http-server": "^14.1.1",
    "jsdom": "^27.0.0",
    "source-map-loader": "^5.0.0",
    "uglify-js": "^3.19.3",
    "uglifycss": "^0.0.29"
  }
}
